
world_prec = 1.0e-3
world_size =  5

MPI {
  numerically_exact = true
}

Printer {
  print_level = 3                       # Level of detail in the printed output
}

Molecule {
  $coords
  H   0.0     0.0    -0.7
  H   0.0     0.0     0.7
  $end

}

WaveFunction  {
  method = pbe0
  environment = pcm
}

PCM {
  SCRF {
    kain = 5
    max_iter = 10
    dynamic_thrs = true
    optimizer = potential
  }

  Permittivity {
    epsilon_in = 1.0
    epsilon_out = 2.0
    formulation = exponential
  }
}

SCF {
  run = true
  guess_type = sad_gto
}
