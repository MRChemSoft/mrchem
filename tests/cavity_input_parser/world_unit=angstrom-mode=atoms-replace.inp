}

WaveFunction {
  method = HF
  environment = PCM
}

PCM {
  Permittivity {
    outside = {
      epsilon_static = 80.0
    }
  }
  Cavity {
    mode = atoms
    # oxygen: replace with explicit alpha, beta and sigma
