    # hydrogen: replace with default alpha, beta, and sigma
    $spheres
    0  1.52 1.1 0.5 0.1058354498
    1  1.52 1.1 0.5
    2  1.2 1.1
    3  1.2
    $end
  }
}

SCF {
  run = false
}
